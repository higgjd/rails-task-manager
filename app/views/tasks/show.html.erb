<h1><%= @task.title %></h1>
<p><%= @task.details %></p>

<p>
  <% if @task.completed == false %>
    <i class="fas fa-square"> </i><%= "This task is not completed" %>
  <% else %>
    <i class="fas fa-check-square"> </i><%= "This task is complete" %>
  <% end %>
</p>

<p><%= link_to 'Edit this task', edit_task_path %></p>
<p><%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
<p><%= link_to 'Back to tasks', tasks_path %></p>
